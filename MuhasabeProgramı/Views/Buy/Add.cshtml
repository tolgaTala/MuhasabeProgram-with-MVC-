@model BuyAddDto

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Alış Yönetimi /</span> Alış Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <div class="card-body">
                    <form asp-controller="Buy" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="ProductId" />
                        <div class="form-group">

                            <label asp-for="SalerId">Satıcılar</label>
                            <a class="btn text-primary float-end" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
                                Satıcı Ekle<i class="bx bx-plus"></i>
                            </a>
                            <select id="salerList" class="form-control mb-3" asp-for="SalerId" asp-items="@(new SelectList(Model.Salers,"Id","Name"))"></select>
                            <span asp-validation-for="SalerId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AlisTarihi" class="form-label">Alış Tarihi</label>
                            <input asp-for="AlisTarihi" type="date" class="form-control mb-3" value="2024-01-01" name="AlisTarihi" min="2024-01-01" max="2024-12-31" />
                            @* <input asp-for="AlisTarihi" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen ürün ismi Giriniz" aria-describedby="defaultFormControlHelp"> *@
                            <span asp-validation-for="AlisTarihi" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="EvrakNo" class="form-label">Evrak No</label>
                            <input asp-for="EvrakNo" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Evrak No Giriniz" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="EvrakNo" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Stok" class="form-label">Ürün İsmİ</label>
                                    <input asp-for="Stok" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Alış adetini Giriniz" aria-describedby="defaultFormControlHelp">
                                    <span asp-validation-for="Stok" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Stok" class="form-label">Adet</label>
                                    <input asp-for="Stok" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Alış adetini Giriniz" aria-describedby="defaultFormControlHelp">
                                    <span asp-validation-for="Stok" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Fiyat" class="form-label">Fiyat</label>
                                    <input asp-for="Fiyat" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen alış fiyatını Giriniz" aria-describedby="defaultFormControlHelp">
                                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        

                        


                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </form>

                </div>

            </div>
        </div>

    </div>

</div>  

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Kategori Ekleme</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="d-block form-label">Satıcı İsmi</label>
                        <input class="form-control" type="text" id="salerName" />
                    </div>
                    <div class="form-group">
                        <label class="d-block form-label">Adresi</label>
                        <input class="form-control" type="text" id="salerAddress" />
                    </div>
                    <div class="form-group">
                        <label class="d-block form-label">Telefon Numarası</label>
                        <input class="form-control" type="text" id="salerPhone" />
                    </div>
                    <div class="form-group">
                        <label class="d-block form-label">Vergi No</label>
                        <input class="form-control" type="text" id="salerTaxNo" />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary" id="btnSave" data-keyboard="false">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/categoryAdd.js"></script>
    <script>
        var app = app || {};
        app.Urls = app.Urls || {};

        app.Urls.baseUrl = "@Url.Content("~")";
        app.Urls.categoryAddUrl = "@(Url.Action("AddWithAjax", "Saler"))";
        app.Urls.articleAddUrl = "@(Url.Action("Add", "Buy"))";
    </script>
}