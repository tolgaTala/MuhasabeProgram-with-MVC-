@model ProductAddDto

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Satıcı Yönetimi /</span> Satıcı Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <div class="card-body">
                    <form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Ürün İsmi</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen ürün ismi Giriniz" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EndOfYearPrice" class="form-label">Yıl Sonu Maliyet</label>
                            <input asp-for="EndOfYearPrice" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen yıl sonu maliyeti Giriniz" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="EndOfYearPrice" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EndOfYearStock" class="form-label">Yıl Sonu Stok</label>
                            <input asp-for="EndOfYearStock" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen yıl sonu stok Giriniz" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="EndOfYearStock" class="text-danger"></span>
                        </div>
                                                

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </form>

                </div>

            </div>
        </div>

    </div>

</div>